{
  "manifest_version": 3,
  "name": "YouTube 字幕下载器",
  "version": "1.0",
  "description": "下载 YouTube 视频的字幕",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardRead",
    "downloads",
    "tabs",
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "https://video.google.com/*"
  ],
  "action": {
    "default_title": "YouTube 字幕下载器"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
} 